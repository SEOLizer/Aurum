// Float arithmetic and PrintFloat test
fn main(): int64 {
    // Test 1: Basic addition
    var x: f64 := 3.14;
    var y: f64 := 2.0;
    var z: f64 := x + y;
    PrintStr("5.14 = ");
    PrintFloat(z);
    PrintStr("\n");

    // Test 2: Zero
    var zero: f64 := 0.0;
    PrintStr("0.000000 = ");
    PrintFloat(zero);
    PrintStr("\n");

    // Test 3: Small fractional
    var small: f64 := 0.001;
    PrintStr("0.001000 = ");
    PrintFloat(small);
    PrintStr("\n");

    // Test 4: Negative literal (direct)
    var neg: f64 := -42.5;
    PrintStr("-42.500000 = ");
    PrintFloat(neg);
    PrintStr("\n");

    // Test 5: Large number
    var big: f64 := 12345.6789;
    PrintStr("12345.678900 = ");
    PrintFloat(big);
    PrintStr("\n");

    return 0;
}
