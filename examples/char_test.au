// Beispiel: Zeichen-Literale (Char literals)
// Zeigt die Verwendung von einzelnen Zeichen

fn main(): int64 {
    // Char-Literale werden als int64 mit dem ASCII-Wert gespeichert
    var letter_a: int64 := 65;  // 'A'
    var newline: int64 := 10;   // '\n'
    var tab: int64 := 9;        // '\t'

    print_str("Buchstabe A als Zahl: ");
    print_int(letter_a);  // Erwartet: 65
    print_str("\n");

    print_str("Mit Tab:");
    print_int(tab);       // Erwartet: 9
    print_str("<- hier war ein Tab\n");

    // Char-Vergleich (als int-Werte)
    if 65 < 66 {  // 'A' < 'B'
        print_str("A kommt vor B\n");
    }

    return 0;
}
