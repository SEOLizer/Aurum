// examples/test_println.lyx
// Demonstriert die neuen PrintLn-Überladungen und printf

import std.io;
import std.string;

fn main(): int64 {
  // PrintLn für String
  PrintLn("Hello World");

  // PrintLn für int
  PrintLn(42);

  // PrintLn für float
  PrintLn(3.1415 as f64);

  // PrintLn für bool
  PrintLn(true);
  PrintLn(false);

  // printf (pure-Lyx) - %s, %d, %f, %% supported (up to 4 placeholders)
  var s_num: pchar := IntToStr(42);
  var s_pi: pchar := FloatToStr(3.1415 as f64, 6);
  printf("Formatted: %s = %s, pi=%s\n", "answer", s_num, s_pi);

  return 0;
}
