// Beispiel: For-Schleife (als while implementiert)
// Berechnet Summe von 1 bis 5

fn main(): int64 {
    var sum: int64 := 0;
    var i: int64 := 1;

    // Aufw채rts z채hlen
    while i <= 5 {
        sum := sum + i;
        i := i + 1;
    }
    PrintInt(sum);  // Erwartet: 15
    PrintStr("\n");

    // Abw채rts z채hlen
    sum := 0;
    i := 5;
    while i >= 1 {
        sum := sum + i;
        i := i - 1;
    }
    PrintInt(sum);  // Erwartet: 15
    PrintStr("\n");

    return 0;
}
