// Einfaches Beispiel zur Demonstration der numerischen Datumsfunktionen

fn main(argc: int64, argv: pchar): int64 {
  // Beispiel: 2026-02-15
  let y: int64 := 2026;
  let m: int64 := 2;
  let d: int64 := 15;

  // Berechnungen
  let days: int64 := DaysFromCivil(y, m, d);
  let doy: int64 := day_of_year(y, m, d);
  let w: int64 := weekday(y, m, d); // 0=Mon

  PrintStr("Date info:\n");
  PrintStr("year: "); PrintInt(y); PrintStr("\n");
  PrintStr("month: "); PrintInt(m); PrintStr("\n");
  PrintStr("day: "); PrintInt(d); PrintStr("\n");
  PrintStr("days since epoch: "); PrintInt(days); PrintStr("\n");
  PrintStr("day of year: "); PrintInt(doy); PrintStr("\n");
  PrintStr("weekday (0=Mon): "); PrintInt(w); PrintStr("\n");

  // Demo: format current epoch times
  let ts0: int64 := 0; // 1970-01-01T00:00:00Z
  let s: pchar := format_unix(ts0, "%Y-%m-%d %H:%i:%s", 0);
  PrintStr("formatted ts0: "); PrintStr(s); PrintStr("\n");

  return 0;
}
