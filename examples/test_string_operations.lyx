// Test für String-Operations mit neuen Builtins
fn main(): int64 {
  PrintStr("=== String Builtin Tests ===\n");
  
  // Test 1: StrLength
  PrintStr("Test 1: StrLength\n");
  var len1: int64 := StrLength("Hello");
  var len2: int64 := StrLength("");
  var len3: int64 := StrLength("World!");
  PrintStr("Length of 'Hello': ");
  PrintInt(len1);
  PrintStr("\nLength of '': ");
  PrintInt(len2); 
  PrintStr("\nLength of 'World!': ");
  PrintInt(len3);
  PrintStr("\n\n");
  
  // Test 2: StrCharAt
  PrintStr("Test 2: StrCharAt\n");
  var s: pchar := "ABC123";
  var c0: int64 := StrCharAt(s, 0);
  var c1: int64 := StrCharAt(s, 1); 
  var c2: int64 := StrCharAt(s, 2);
  var c3: int64 := StrCharAt(s, 3);
  PrintStr("Characters in 'ABC123': ");
  PrintInt(c0); PrintStr(" ");
  PrintInt(c1); PrintStr(" "); 
  PrintInt(c2); PrintStr(" ");
  PrintInt(c3); PrintStr("\n");
  PrintStr("Should be: 65 66 67 49 (A B C 1)\n\n");
  
  // Test 3: StrSetChar (modifying a string)
  PrintStr("Test 3: StrSetChar\n");
  // Note: In realen Anwendungen müssten wir einen Buffer haben
  // Für jetzt nur demonstrieren dass die Funktion aufgerufen werden kann
  
  return 0;
}