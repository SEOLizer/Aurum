// COMPREHENSIVE TEST: Full Array Support
// Tests: Literals, Indexing, Assignment, Mixed Types, Constants

con ARRAY_SIZE: int64 := 4;

fn test_integer_arrays() -> int64 {
    var nums: array := [10, 20, 30, 40];
    var sum: int64 := 0;
    
    // Test indexing
    sum := sum + nums[0]; // 10
    sum := sum + nums[1]; // 20
    sum := sum + nums[2]; // 30
    sum := sum + nums[3]; // 40
    
    // Test assignment
    nums[0] := 5;
    nums[3] := 45;
    
    // Test modified values
    sum := sum - 10 + nums[0]; // -10 + 5 = -5, total: 100 - 5 = 95
    sum := sum - 40 + nums[3]; // -40 + 45 = +5, total: 95 + 5 = 100
    
    return sum; // Should be 100
}

fn test_char_arrays() -> int64 {
    var chars: array := ['A', 'B', 'C'];
    chars[1] := 'X';
    return chars[1]; // Should return 88 (ASCII of 'X')
}

fn test_float_arrays() -> int64 {
    var floats: array := [1.0, 2.5, 3.14];
    // For now, we can't directly print floats, so return 0 as success indicator
    return 0;
}

fn main() {
    var result: int64;
    
    result := test_integer_arrays();
    print_int(result); // Should print 100
    
    result := test_char_arrays();
    print_int(result); // Should print 88
    
    result := test_float_arrays();
    print_int(result); // Should print 0
    
    // Test empty arrays
    var empty: array := [];
    
    // Test single element
    var single: array := [999];
    print_int(single[0]); // Should print 999
}