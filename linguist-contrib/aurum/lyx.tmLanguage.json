{
  "name": "Lyx",
  "scopeName": "source.lyx",
  "fileTypes": ["lyx"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#storage" },
    { "include": "#builtins" },
    { "include": "#declarations" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": { "patterns": [ { "name": "comment.line.double-slash.lyx", "match": "//.*$" }, { "name": "comment.block.lyx", "begin": "/\\*", "end": "\\*/" } ] },
    "strings": { "patterns": [ { "name": "string.quoted.double.lyx", "begin": "\"", "end": "\"", "patterns": [ { "name": "constant.character.escape.lyx", "match": "\\\\(n|r|t|\\\\|\\\"|0)" } ] } ] },
    "numbers": { "patterns": [ { "name": "constant.numeric.integer.lyx", "match": "\\b-?[0-9]+\\b" } ] },
    "keywords": { "patterns": [ { "name": "keyword.control.lyx", "match": "\\b(fn|var|let|co|con|if|else|while|return|true|false|extern|case|switch|break|default)\\b" } ] },
    "types": { "patterns": [ { "name": "storage.type.lyx", "match": "\\b(int8|int16|int32|int64|int|bool|void|pchar|string)\\b" } ] },
    "storage": { "patterns": [ { "name": "storage.modifier.lyx", "match": "\\b(var|let|co|con)\\b" } ] },
    "builtins": { "patterns": [ { "name": "support.function.builtin.lyx", "match": "\\b(print_str|print_int|exit)\\b" } ] },
    "declarations": { "patterns": [ { "name": "meta.declaration.constant.lyx", "begin": "\\bcon\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*:\\s*(int8|int16|int32|int64|int|bool|void|pchar|string)\\s*:=\\s*", "end": ";" } ] },
    "functions": { "patterns": [ { "name": "entity.name.function.lyx", "match": "(?<=\\bfn\\s+)[A-Za-z_][A-Za-z0-9_]*" } ] },
    "operators": { "patterns": [ { "name": "keyword.operator.lyx", "match": ":=|==|!=|<=|>=|&&|\\|\\||!|\\+|\\-|\\*|/|%|<|>" }, { "name": "punctuation.lyx", "match": "[(){}:,;]" } ] },
    "identifiers": { "patterns": [ { "name": "variable.other.lyx", "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b" } ] }
  }
}
