// std/string.lyx
// String helper functions implemented in Lyx

pub fn strlen(s: pchar): int64 {
  var i: int64 := 0;
  while s[i] <> 0 {
    i := i + 1;
  }
  return i;
}

pub fn strcmp(a: pchar, b: pchar): int64 {
  var i: int64 := 0;
  while true {
    var ca: int64 := a[i];
    var cb: int64 := b[i];
    if ca <> cb {
      if ca < cb { return -1; } else { return 1; }
    end;
    if ca = 0 { break; }
    i := i + 1;
  }
  return 0;
}
