<idea-plugin version="2">
  <id>org.aurum.aurumlang</id>
  <name>Lyx Language Support</name>
  <vendor>Andreas RÃ¶ne</vendor>
  <version>0.1.0</version>

  <description>
    Syntax highlighting for the Lyx language (Lyx .lyx files).
  </description>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Register language -->
    <lang.language implementation="org.aurum.LyxLanguage" />

    <!-- File type -->
    <fileTypeFactory implementation="org.aurum.LyxFileTypeFactory" />

    <!-- Syntax highlighter binding -->
    <syntaxHighlighterFactory language="Lyx" implementation="org.aurum.LyxSyntaxHighlighterFactory" />
  </extensions>

  <application-components>
  </application-components>

</idea-plugin>
