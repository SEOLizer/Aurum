{
  "name": "Aurum",
  "scopeName": "source.aurum",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#storage" },
    { "include": "#builtins" },
    { "include": "#declarations" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.aurum",
          "match": "//.*$"
        },
        {
          "name": "comment.block.aurum",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "include": "#comment" }
          ]
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.block.aurum",
          "match": "."
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.aurum",
          "begin": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.aurum" } },
          "end": "\"",
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.aurum" } },
          "patterns": [
            {
              "name": "constant.character.escape.aurum",
              "match": "\\\\(n|r|t|\\\\|\\\"|0)"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.aurum",
          "match": "\\b-?[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.aurum",
          "match": "\\b(fn|var|let|co|con|if|else|while|return|true|false|extern|case|switch|break|default)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.aurum",
          "match": "\\b(int8|int16|int32|int64|int|bool|void|pchar|string)\\b"
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.modifier.aurum",
          "match": "\\b(var|let|co|con)\\b"
        },
        {
          "name": "meta.declaration.variable.aurum",
          "match": "\\b(var|let|co)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "storage.modifier.aurum" },
            "2": { "name": "entity.name.variable.aurum" }
          }
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.aurum",
          "match": "\\b(print_str|print_int|exit)\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.declaration.constant.aurum",
          "begin": "\\bcon\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*:\\s*(int8|int16|int32|int64|int|bool|void|pchar|string)\\s*:=\\s*",
          "beginCaptures": {
            "0": { "name": "keyword.declaration.con.aurum" },
            "1": { "name": "entity.name.constant.aurum" },
            "2": { "name": "storage.type.aurum" }
          },
          "end": ";",
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#keywords" }
          ]
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.aurum",
          "match": "(?<=\\bfn\\s+)[A-Za-z_][A-Za-z0-9_]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.aurum",
          "match": ":=|==|!=|<=|>=|&&|\\|\\||!|\\+|\\-|\\*|/|%|<|>"
        },
        {
          "name": "punctuation.aurum",
          "match": "[(){}:,;]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.aurum",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.aurum",
  "fileTypes": ["au"]
}
