// Complete Array Features Test

fn main() {
    // 1. Array Literals with different types
    var integers: array := [10, 20, 30, 40];
    var chars: array := ['A', 'B', 'C', 'D'];
    var floats: array := [1.1, 2.2, 3.3];
    
    // 2. Array Indexing (reading)
    var first: int64 := integers[0];
    var last: int64 := integers[3];
    print_int(first); // Should print 10
    print_int(last);  // Should print 40
    
    // 3. Array Assignment (writing)
    integers[0] := 99;
    integers[3] := 88;
    print_int(integers[0]); // Should print 99
    print_int(integers[3]); // Should print 88
    
    // 4. Character Arrays
    print_int(chars[0]); // Should print 65 ('A')
    chars[1] := 'X';
    print_int(chars[1]); // Should print 88 ('X')
    
    // 5. Mixed Operations
    integers[1] := chars[0]; // Copy char to int array
    print_int(integers[1]); // Should print 65
    
    // 6. Empty and Single Element Arrays
    var empty: array := [];
    var single: array := [42];
    print_int(single[0]); // Should print 42
    
    // Success indicator
    print_int(777);
}